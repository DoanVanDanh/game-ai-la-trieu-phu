<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/manHinh"
    android:background="@drawable/bg_altp">
    <Button
        android:layout_width="@dimen/size240dp"
        android:layout_height="@dimen/size50dp"
        android:id="@+id/btnHuongDan"
        android:background="@drawable/answer_panel_yellow"
        android:text="Hướng dẫn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size20dp"/>

    <ImageView
        android:layout_width="@dimen/size50dp"
        android:layout_height="@dimen/size50dp"
        android:id="@+id/imgBack"
        android:src="@drawable/back"
        android:layout_marginTop="@dimen/size20dp"
        android:layout_marginLeft="@dimen/size10dp"
        android:onClick="goBack"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnHuongDan"
        android:layout_marginTop="@dimen/size20dp"
        android:src="@drawable/hd"/>

</RelativeLayout>